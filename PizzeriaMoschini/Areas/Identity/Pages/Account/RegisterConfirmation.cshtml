@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="text-center">

    <h2>Thank you for registering</h2>

    <p class="lead">A confirmation email has been sent to @Model.Email. Please check your inbox and follow the instructions to complete your registration.</p>
    
    <p>If you do not receive the email, please check your spam folder or <a asp-page="/Account/ResendEmailConfirmation">resend the confirmation email</a>.</p>

</div>
